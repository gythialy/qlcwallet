{
	"name": "qlcwallet",
	"version": "1.0.0",
	"license": "MIT",
	"description": "Wallet for interacting with QLC Chain",
	"author": {
		"name": "QLC Chain Team",
		"email": "admin@qlink.mobi"
	},
	"homepage": "https://qlcchain.org",
	"copyright": "Copyright Â© 2019 QLC Chain Team",
	"bugs": {
		"url": "https://github.com/qlcchain/QLCWallet/issues",
		"email": "support@qlcchain.org"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/qlcchain/QLCWallet.git"
	},
	"main": "main.js",
	"scripts": {
		"postinstall": "node patch.js",
		"format:fix": "pretty-quick --staged",
		"precommit": "run-s format:fix lint",
		"format:check": "prettier --config ./.prettierrc --list-different \"src/{app,environments,assets}/**/*{.ts,.js,.json,.css,.scss}\"",
		"format:all": "prettier --config ./.prettierrc --write \"src/{app,environments,assets}/**/*{.ts,.js,.json,.css,.scss}\"",
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build",
		"test": "ng test",
		"lint": "ng lint",
		"e2e": "ng e2e",
		"desktop": "electron main.js",
		"pack": "electron-builder --dir",
		"dist": "electron-builder",
		"dist-full": "electron-builder -wml --x64",
		"publish": "build -wml --x64 -p always",
		"wallet:dev": "ng serve --open",
		"wallet:dev-ssl": "ng serve --open --ssl 1 --ssl-key \"assets/dev-cert/key.pem\" --ssl-cert \"assets/dev-cert/cert.pem\"",
		"wallet:build": "ng build --configuration=production",
		"wallet:build-desktop": "ng build --configuration=desktop --base-href ",
		"desktop:dev": "electron main.js",
		"desktop:local": "electron-builder",
		"desktop:full": "electron-builder -wml --x64",
		"desktop:publish": "build -wml --x64 -p always"
	},
	"dependencies": {
		"@angular-devkit/core": "7.1.4",
		"@angular/animations": "^7.1.4",
		"@angular/common": "^7.1.4",
		"@angular/compiler": "^7.1.4",
		"@angular/core": "^7.1.4",
		"@angular/forms": "^7.1.4",
		"@angular/http": "^7.1.4",
		"@angular/platform-browser": "^7.1.4",
		"@angular/platform-browser-dynamic": "^7.1.4",
		"@angular/router": "^7.1.4",
		"@ledgerhq/hw-transport-u2f": "^4.32.0",
		"@ngx-translate/core": "^11.0.1",
		"@ngx-translate/http-loader": "^4.0.0",
		"@types/crypto-js": "^3.1.43",
		"@types/uuid": "^3.4.4",
		"ajv": "^6.6.2",
		"bignumber.js": "^8.0.1",
		"bip39": "^2.5.0",
		"blakejs": "^1.1.0",
		"bootstrap": "^4.2.1",
		"classlist.js": "^1.1.20150312",
		"core-js": "^2.6.1",
		"cross-spawn": "^6.0.5",
		"crypto-js": "^3.1.9-1",
		"electron-updater": "^4.0.0",
		"hw-app-nano": "^1.2.0",
		"jquery": "^3.3.1",
		"ngx-bootstrap": "^3.1.4",
		"ngx-clipboard": "^11.1.9",
		"ngx-device-detector": "^1.3.5",
		"ngx-logger": "^3.3.8",
		"popper.js": "^1.14.6",
		"qrcode": "^1.3.2",
		"rxjs": "^6.3.3",
		"tslib": "^1.9.0",
		"tweetnacl": "^1.0.0",
		"zone.js": "^0.8.14"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "~0.11.0",
		"@angular/cli": "^7.1.4",
		"@angular/compiler-cli": "^7.1.4",
		"@angular/language-service": "^7.1.4",
		"@types/bip39": "^2.4.1",
		"@types/jasmine": "^3.3.5",
		"@types/jasminewd2": "^2.0.6",
		"@types/node": "^10.12.18",
		"@types/qrcode": "^1.3.0",
		"codelyzer": "^4.5.0",
		"electron": "^4.0.1",
		"electron-builder": "^20.38.4",
		"husky": "^1.3.1",
		"jasmine-core": "^3.3.0",
		"jasmine-spec-reporter": "^4.2.1",
		"karma": "^3.1.4",
		"karma-chrome-launcher": "^2.2.0",
		"karma-cli": "~2.0.0",
		"karma-coverage-istanbul-reporter": "^2.0.4",
		"karma-jasmine": "~2.0.1",
		"karma-jasmine-html-reporter": "^1.4.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.15.3",
		"pretty-quick": "^1.8.0",
		"protractor": "^5.4.2",
		"rxjs-tslint-rules": "^4.14.3",
		"ts-node": "^7.0.1",
		"tslint": "^5.12.0",
		"typescript": "^3.1.6",
		"uikit": "^3.0.0-rc.26"
	},
	"build": {
		"appId": "org.qlcchain.qlcwallet",
		"buildVersion": "1.0.0",
		"productName": "QLCWallet",
		"asar": true,
		"directories": {
			"output": "dist-desktop",
			"app": "./"
		},
		"dmg": {
			"window": {
				"width": 540,
				"height": 380
			},
			"contents": [
				{
					"x": 410,
					"y": 230,
					"type": "link",
					"path": "/Applications"
				},
				{
					"x": 130,
					"y": 230,
					"type": "file"
				}
			]
		},
		"mac": {
			"target": [
				"dmg"
			],
			"type": "distribution",
			"extraResources": {
				"from": "./extra/darwin/",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			"binaries": [
				"./dist-desktop/mac/QLCWallet.app/Contents/Resources/gqlc"
			],
			"category": "public.app-category.finance"
		},
		"win": {
			"target": [
				"nsis",
				"portable"
			],
			"extraResources": {
				"from": "./extra/win32/${arch}",
				"to": "./",
				"filter": [
					"**/*"
				]
			}
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"linux": {
			"target": [
				"deb",
				"AppImage"
			],
			"desktop": {
				"Categories": "P2P;Finance;Security"
			},
			"extraResources": {
				"from": "./extra/linux/",
				"to": "./",
				"filter": [
					"**/*"
				]
			}
		}
	}
}
